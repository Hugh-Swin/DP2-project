 function get_average($sales_array)
 {
      $total = "";
      $count = count($sales_array);
      for($t=0;$t<$count;$t++)
      
      $average = ($total/($count));
      return round($average);
 }

 function get_prediction($average)
 {
      $month = 30;
      
      $prediction = ($average*($month))
      return round($prediction);
 }
